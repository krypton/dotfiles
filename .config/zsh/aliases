alias vim='nvim'
alias ls='eza -lh --group-directories-first --icons'
alias lsa='ls -a'
alias lt='eza --tree --level=2 --long --icons --git'
alias lta='lt -a'

# Git
alias ga='git add'
alias gc='git commit'
alias gp='git pull'
alias gP='git push'

# Fast navigation
alias dots="cd $DOTFILES"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias d="dirs -v"
for index in $(seq 1 10); do
  alias "$index"="cd +$index"
done
unset index
