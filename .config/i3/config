client.placeholder 	#000000 #0c0c0c $white2 #000000 #0c0c0c

# for_window [class="Alacritty"] border pixel 3

# Configure 5px of space between windows and to the screen edges.
gaps inner 10px

# Configure an additional 5px of extra space to the screen edges,
# for a total gap of 10px to the screen edges, and 5px between windows.
gaps outer 10px

# Only enable outer gaps when there is exactly one window or split container on the workspace.
smart_gaps inverse_outer

# assign applications to specific workspace
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    i3bar_command i3bar --transparency
    status_command i3status --config ~/.config/i3/i3status.conf

    # Disable all tray icons
    # tray_output none
    tray_output primary

    position top
    workspace_min_width 160px
    binding_mode_indicator yes

    colors {
        background $backgroundalpha
        statusline $foreground
        separator $foreground

        # border background text
        focused_workspace 	$black2 $black2 $foreground
        active_workspace 	$black2 $black1 $white2
        inactive_workspace 	$background $background $foreground
        urgent_workspace 	$red1 $red1 $white2
        binding_mode 		$background $red2 $white2
    }
}

# config monitor resolution
set $mode_display Config monitor resolution - Default config (d)

mode "$mode_display" {
    bindsym d exec --no-startup-id sh "$HOME/.config/X11/monitor.sh", mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+a mode "$mode_display"
