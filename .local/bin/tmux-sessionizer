#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected_paths=$(fd . ~/personal --type d --exact-depth 1 --exclude .bundle --hidden)
    if [[ -d ~/work ]]; then
        selected_paths+=$(fd . ~/work --type d --exact-depth 1 --exclude .bundle --exclude .ruby-lsp --exclude '*postgres*' --hidden)
    fi
    selected=$(echo $selected_paths | tr " " "\n" | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
